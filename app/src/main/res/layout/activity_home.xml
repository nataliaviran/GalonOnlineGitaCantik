<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/recmaincolor"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:background="@drawable/text1"
        android:layout_gravity="center"
        android:layout_marginTop="-250dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/text2"
        android:layout_gravity="center"
        android:layout_marginTop="-5dp"/>

    <Button
        android:id="@+id/btn_home_login"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:background="@drawable/btn_login_reg"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:hint="Login"/>

    <Button
        android:id="@+id/btn_home_signup"
        android:layout_width="200dp"
        android:layout_height="51dp"
        android:background="@drawable/btn_login_reg"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:hint="Sign up"/>

</LinearLayout>